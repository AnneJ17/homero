<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textSize="32sp"
        android:text="@string/title_where"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/watermark_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@id/text_view_title"
        android:src="@drawable/watermark_location"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/text_view_address"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watermark_location"
        android:text="hbajbck"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="7dp"/>

    <EditText
        android:id="@+id/edit_text_where"
        android:layout_below="@id/text_view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="7dp"
        android:hint="@string/hint_where" />

</RelativeLayout>